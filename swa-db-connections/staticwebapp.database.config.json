{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "cosmosdb_nosql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')",
    "options": {
      "database": "MediaGalleryDB",
      "schema": "staticwebapp.database.schema.gql"
    }
  },
  "runtime": {
    "graphql": {
      "enabled": true,
      "allow-introspection": true,
      "path": "/graphql"
    },
    "host": {
      "mode": "production",
      "cors": {
        "origins": ["http://localhost:4280"],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Point": {
      "source": "MetricPoint",
      "rest": false,
      "graphql": true,
      "permissions": [
        {
          "actions": ["read"],
          "role": "anonymous"
        }
      ]
    },
    "Total": {
      "source": "MetricTotal",
      "rest": false,
      "graphql": true,
      "permissions": [
        {
          "actions": ["read"],
          "role": "anonymous"
        }
      ]
    },
    "YearTotal": {
      "source": "MetricYearTotal",
      "rest": false,
      "graphql": true,
      "permissions": [
        {
          "actions": ["read"],
          "role": "anonymous"
        }
      ]
    },
    "Book": {
        "source": "MediaInfo",
        "rest": false,
        "graphql": true,
        "permissions": [
          {
            "actions": ["read"],
            "role": "anonymous"
          }
        ]
    },
    "Mtype": {
        "source": "MediaType",
        "rest": false,
        "graphql": true,
        "permissions": [
          {
            "actions": ["read"],
            "role": "anonymous"
          }
        ]
    },
    "Malbum": {
        "source": "MediaAlbum",
        "rest": false,
        "graphql": true,
        "permissions": [
          {
            "actions": ["read"],
            "role": "anonymous"
          }
        ]
    },
    "Mpeople": {
        "source": "MediaPeople",
        "rest": false,
        "graphql": true,
        "permissions": [
          {
            "actions": ["read"],
            "role": "anonymous"
          }
        ]
    }
  }
}

